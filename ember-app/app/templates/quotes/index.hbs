<h2>Quotes:</h2>

<div class="row">
  <div class="col-lg-12 col-md-12 col-sm-12">
    {{#link-to 'quotes.new' tagName="button" class="btn btn-primary pull-right"}}
      <span class="glyphicon glyphicon-plus"></span> New quote
    {{/link-to}}
  </div>
</div>

{{#each model as |quote|}}
  <blockquote>
    <p>{{quote.quote}}</p>
    <small class="author">Author: {{quote.author}}</small>
  </blockquote>
{{/each}}
