<form>
  <legend>New quote: </legend>
  <div class="row">
    <div class="col-sm-6 col-md-6 col-sm-6">
      <div class="form-group">
        <label for="quote-author">Author</label>
        {{input class='form-control' value=model.author type='text'}}
      </div>

      <div class="form-group">
        <label for="quote-quote">Quote</label>
        {{textarea class='form-control' value=model.quote rows='5' type='text'}}
      </div>

      <button {{action 'saveQuote' model}} class="btn btn-success" type="button">
        <span class="glyphicon glyphicon-floppy-disk"></span> Save
      </button>

      <button {{action 'abortQuote'}} class="btn btn-danger" type="button">
        <span class="glyphicon glyphicon-trash"></span> Cancel
      </button>
    </div>
  </div>
</form>
